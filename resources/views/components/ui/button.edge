@set('variant', variant ?? 'primary')

@set('variants', {
  'text-gray-500 hover:text-gray-600 hover:bg-gray-100 px-3 py-2 text-sm font-semibold rounded-md': variant === 'subtle',
  'rounded-md bg-indigo-600 flex items-center px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none': variant === 'primary'
})

<button {{ $props.serializeExcept(['variant'], { class: clsx(variants) }) }}>
